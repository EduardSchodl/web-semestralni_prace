{% extends "BaseView.twig" %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Publish Date</th>
            <th scope="col">Status</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ article.title }}</td>
                <td>{{ article.create_time }}</td>
                <td class="{% if article.status_id == 1 %}bg-secondary{% elseif article.status_id == 2 %}bg-success{% else %}bg-danger{% endif %}">{{ article.status }}</td>
                <td>
                    <a class="btn btn-primary" href="articles/{{ article.slug }}">Link</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}