{% extends "BaseView.twig" %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
    <div id="alertContainer" class="position-fixed top-0 end-0 p-3"></div>
    <div class="container-fluid mt-5">
        <form id="publishForm" class="g-3 justify-content-center" method="post" enctype="multipart/form-data">
            <div class="col-12 col-sm-7 col-md-5 mb-3 mx-auto">
                <label for="titleInput" class="form-label text-center">Title</label>
                <input type="text" class="form-control" id="titleInput" name="title" required>
            </div>
            <div class="col-12 col-sm-6 col-md-8 mb-3 mx-auto">
                <label for="abstract" class="form-label">Abstract</label>
                <div id="editor" class="editor"></div>
                <textarea name="abstract" id="abstract" style="display: none"></textarea>
            </div>
            <div class="col-12 col-sm-6 col-md-3 mb-3 mx-auto">
                <label for="file" class="form-label text-center">File</label>
                <input type="file" class="form-control" id="file" name="file" required>
            </div>
            <div class="col-12 text-center mb-3 mx-auto">
                <button type="button" class="btn btn-success" onclick="publishArticle()">Publish Article</button>
            </div>
        </form>
    </div>
    <script src="/web-semestralni_prace/src/js/PublishManagement.js"></script>
{% endblock %}
