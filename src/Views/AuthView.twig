{% extends "BaseView.twig" %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
    <div id="bodyDiv" class="container mt-5">
        <div class="col-lg-6 col-md-8 col-12 mx-auto"> <!-- Set a custom width for larger screens -->
            {% if current_path == "/login" %}
                <form id="authForm" method="post" class="row g-3">
                    <div class="col-12">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" id="username" required>
                    </div>
                    <div class="col-12">
                        <label for="psswd" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="psswd" required>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-box-arrow-in-right fs-5 text-light"></i>
                            Sign in
                        </button>
                    </div>

                    <hr>

                    <div id="textDiv" class="col-12 text-center">
                        <p id="inlineText">Ještě nemáte účet?</p>
                        <a id="noDecor" href="register">Register Now</a>
                    </div>
                </form>
            {% else %}
                <form method="post" id="authForm" class="row g-3">
                    <div class="col-md-6 col-12">
                        <label for="fname" class="form-label">First name</label>
                        <input type="text" name="fname" class="form-control" id="fname" placeholder="John" required>
                    </div>
                    <div class="col-md-6 col-12">
                        <label for="lname" class="form-label">Last name</label>
                        <input type="text" name="lname" class="form-control" id="lname" placeholder="Doe" required>
                    </div>
                    <div class="col-12">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" id="username" required>
                    </div>
                    <div class="col-12">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="John.Doe@gmail.com" required>
                    </div>
                    <div class="col-12">
                        <label for="psswd" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="psswd" required>
                    </div>
                    <div id="submitButton" class="col-12 text-center">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-person-plus-fill fs-5 text-light"></i>
                            Sign up
                        </button>
                    </div>

                    <hr>
                    <div id="textDiv" class="col-12 text-center">
                        <p id="inlineText">Máte již účet?</p>
                        <a id="noDecor" href="login">Log In</a>
                    </div>
                </form>
            {% endif %}
        </div> <!-- End of column for form -->
    </div>
{% endblock %}
