{% extends "BaseView.twig" %}

{% block title %} {{ title }} {% endblock %}

{% block content %}
    {% if current_path == "/profile" %}
        <div class="container rounded bg-white mt-5 mb-5">
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle profile-img" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg" alt="Profile Image">
                        <span class="font-weight-bold">{{ app.user.first_name }} {{ app.user.last_name }}</span>
                        <span class="text-black-50">{{ app.user.email }}</span>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="profile-settings-header">Profile Details</h4>
                        </div>
                        <div class="info-section">
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="label-text">First Name:</span>
                                    <p class="value-text">{{ app.user.first_name }}</p>
                                </div>
                                <div class="col-md-6">
                                    <span class="label-text">Last Name:</span>
                                    <p class="value-text">{{ app.user.last_name }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <span class="label-text">Email:</span>
                                    <p class="value-text">{{ app.user.email }}</p>
                                </div>
                                <div class="col-md-6">
                                    <span class="label-text">Role:</span>
                                    <p class="value-text">{{ app.user.role_name }}</p>
                                </div>
                            </div>
                            <a class="btn btn-success" href="profile/edit">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <form method="post">
            <div class="container rounded bg-white mt-5 mb-5">
                <div class="row">
                    <div class="col-md-3 border-right">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                            <span class="font-weight-bold">{{ app.user.first_name }} {{ app.user.last_name }}</span>
                            <span class="text-black-50">{{ app.user.email }}</span>
                        </div>
                    </div>
                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Profile Settings</h4>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label for="fname">First name</label>
                                    <input id="fname" type="text" class="form-control" value="{{ app.user.first_name }}">
                                </div>
                                <div class="col-md-6">
                                    <label for="lname">Last name</label>
                                    <input id="lname" type="text" class="form-control" value="{{ app.user.last_name }}">
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <label for="email">Email</label>
                                    <input id="email" type="email" class="form-control" value="{{ app.user.email }}">
                                </div>
                                <div class="col-md-12">
                                    <label for="password">Password</label>
                                    <input id="password" type="password" class="form-control">
                                </div>
                            </div>
                            <input type="submit" class="btn btn-success" value="Confirm">
                            <a class="btn btn-success" href="profile">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    {% endif %}
{% endblock %}